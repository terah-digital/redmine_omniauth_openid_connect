<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_omniauth_openid_connect' %>

<% if Setting.plugin_redmine_omniauth_openid_connect[:oauth_authentication] %>
  <%= link_to openid_connect_path(:back_url => back_url) do %>
    <%= button_tag :class => 'button-login' do %>
        <%#= image_tag('/plugin_assets/redmine_omniauth_openid_connect/images/openid_connect_login_icon.png', :class => 'button-login-icon', :alt => l(:login_via_openid_connect)) %>
      <%= content_tag :div, Setting.plugin_redmine_omniauth_openid_connect[:login_button_text], :class => 'button-login-text' %>
    <% end %>
  <% end %>
<% end %>
